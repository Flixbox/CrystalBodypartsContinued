<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <ThingDef ParentName="BenchBase">
    <defName>CBPGrowthStation</defName>
    <label>crystal growth chamber</label>
    <description>A crystal growth chamber for making different types of crystal prosthetics.</description>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/CrystalGrowthStation/CBPCrystalGrowthStationBlue</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <drawRotated>false</drawRotated>
      <allowFlip>false</allowFlip>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <canOverlapZones>false</canOverlapZones>
    <fillPercent>0.45</fillPercent>
    <pathCost>60</pathCost>
    <rotatable>false</rotatable>
    <size>(1,1)</size>
    <costList>
      <Steel>20</Steel>
      <CBPCCore>2</CBPCCore>
      <CBPCShard>5</CBPCShard>
      <TMaterials_Glass MayRequire="carnap2.TMaterials.Glass">20</TMaterials_Glass>
    </costList>
    <useHitPoints>true</useHitPoints>
    <tickerType>Rare</tickerType>
    <statBases>
      <Cleanliness>-7</Cleanliness>
      <WorkToBuild>700</WorkToBuild>
      <Mass>10</Mass>
      <MaxHitPoints>25</MaxHitPoints>
      <Flammability>0.2</Flammability>
    </statBases>
    <designationCategory>Production</designationCategory>
    <researchPrerequisites>
      <li>CBPRes</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="ProcessorFramework.CompProperties_Processor">
        <capacity>1</capacity>
        <independentProcesses>true</independentProcesses>
        <parallelProcesses>true</parallelProcesses>
        <dropIngredients>false</dropIngredients>
        <showProductIcon>true</showProductIcon>
        <barOffset>(0.0, 0.25)</barOffset>
        <barScale>(1.0, 1.0)</barScale>
        <colorCoded>false</colorCoded>
        <processes>
          <li>CrysArm</li>
          <li>CrysHand</li>
          <li>CrysLeg</li>
          <li>CrysEye</li>
          <li>CrysEar</li>
          <li>CrysNose</li>
          <li>CrysHeart</li>
          <li>CrysSpine</li>
          <li>CrysLiver</li>
          <li>CrysLung</li>
          <li>CrysKidney</li>
          <li>CrysStomach</li>
          <li>CrysJaw</li>
        </processes>
      </li>
    </comps>
  </ThingDef>

